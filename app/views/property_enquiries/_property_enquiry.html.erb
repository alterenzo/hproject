<div id="<%= dom_id property_enquiry %>" class="w-full">
  <div class="flex justify-center">
    <h1 class="font-bold text-4xl mr-8"><%= property_enquiry.address %></h1>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block"><%= property_enquiry.state %></p>
  </div>

  <% if action_name != "show" %>
    <%= link_to "Show this property enquiry", property_enquiry, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
