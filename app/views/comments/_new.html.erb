
<div class="flex items-center justify-center shadow-lg mx-10 mb-4 rounded-2xl">
  <%= form_with(model: [ property_enquiry, Comment.new ], class:"w-full bg-white rounded-lg px-4 pt-2") do |form| %>
    <div class="flex flex-wrap -mx-3 mb-6">
      <h2 class="px-4 pt-3 pb-2 text-gray-800 text-lg">Add a new comment</h2>
      <div class="w-full md:w-full px-3 mb-2 mt-2">
        <%= form.text_area :content, size: "20x5", class: "bg-gray-100 rounded border border-gray-400 leading-normal resize-none w-full h-20 py-2 px-3 font-medium placeholder-gray-700 focus:outline-none focus:bg-white" %>
      </div>
      <div class="w-full md:w-full flex items-start md:w-full px-3">
        <div class="-mr-1">
          <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white font-medium cursor-pointer" %>
        </div>
      </div>
    </div>
  <% end %>
</div>